struct coord
{
	int x,y;
};
//la estructura perenece a la coordenada original quien se encargara de moverse
struct pieza
{
	coord ori;
	coord peri[3];
	char D;
};






class enemigo{
	private:
		public:
			void pintarmapa();
			void pintar(int, int);
			void borrar(int,int);
			void mover(int &, int &);
};
// para crear naves para el tablero

class jugador{
	
	public:
		void pintar(pieza &);
		
};
//funcion para imprimir porta aviones, se repite 4 veces por que portaaviones sera 4 casillas
void jugador::pintar(pieza &P)
{
	gotoxy(P.ori.x,P.ori.y);cout<<P.D;
	for(int i=0;i<3;i++)
	{
		gotoxy(P.ori.x+P.peri[0].x,P.ori.y+P.peri[0].y);cout<<P.D;
	}
	

}

