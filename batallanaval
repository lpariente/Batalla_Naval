#include<iostream>
#include<windows.h>
#include<conio.h>

using namespace std;

//funcion para mover caracteres por medio dle teclado
void gotoxy(int x, int y){
HANDLE hcon = GetStdHandle(STD_OUTPUT_HANDLE);
 COORD dwPos;
 dwPos.X = x;
 dwPos.Y = y;
 SetConsoleCursorPosition(hcon, dwPos);
}



class enemigo{
	private:
		public:
			void pintar(int, int);
			void mover(int, int);
};

void enemigo::pintar(int x, int y)
{
	gotoxy(x,y);
	cout<<"O";
}
void enemigo:: mover(int x,int y)
{
	if(kbhit())
	{
		char tecla= getch();
		if(tecla=='a') x--;
		if(tecla=='d') x++;
		if(tecla=='w') y--;
		if(tecla=='s') y++;
		enemigo::pintar(x,y);
	}
}

int main ()
{
	enemigo a;
	
	// solo se ejecutara un vez mover a.pintar(10,10);
	while(true)
	{
		a.mover(5,5);
	}
	
}

